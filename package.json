{
  "name": "requirements-gathering-agent",
  "version": "2.1.0",
  "description": "AI-powered PMBOK documentation generator using Azure OpenAI - generates comprehensive project management documents from README context",
  "main": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "requirements-gathering-agent": "dist/cli.js",
    "requirements-agent": "dist/cli.js",
    "rga": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "requirements-gathering",
    "pmbok",
    "project-management",
    "azure-openai",
    "ai-documentation",
    "business-analysis",
    "typescript",
    "cli",
    "requirements-analysis",
    "project-charter",
    "stakeholder-analysis",
    "work-breakdown-structure",
    "risk-management",
    "scope-management",
    "ai-assistant",
    "document-generation",
    "entra-id"
  ],
  "author": {
    "name": "Menno van der Krift",
    "email": "menno@cbaconsult.eu",
    "url": "https://cbaconsult.eu"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdresch/requirements-gathering-agent.git"
  },
  "bugs": {
    "url": "https://github.com/mdresch/requirements-gathering-agent/issues"
  },
  "homepage": "https://github.com/mdresch/requirements-gathering-agent#readme",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.4.1",
    "@azure/openai": "^2.0.0",
    "dotenv": "^16.4.7",
    "openai": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
