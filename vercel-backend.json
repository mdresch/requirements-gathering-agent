{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "API_KEY": "@api_key",
    "JWT_SECRET": "@jwt_secret",
    "MONGODB_URI": "@mongodb_uri",
    "NODE_ENV": "production"
  }
}
