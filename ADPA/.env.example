# Adobe.io API Configuration Example
# Copy this file to .env and fill in your actual Adobe.io credentials
# Get these values from your Adobe Developer Console: https://developer.adobe.com/console

# Required: Adobe.io Client Credentials
ADOBE_CLIENT_ID=your_adobe_client_id_here
ADOBE_CLIENT_SECRET=your_adobe_client_secret_here
ADOBE_ORGANIZATION_ID=your_adobe_organization_id_here

# Optional: Adobe.io API Endpoints (defaults provided, usually don't need to change)
ADOBE_IMS_TOKEN_URL=https://ims-na1.adobelogin.com/ims/token
ADOBE_PDF_SERVICES_URL=https://pdf-services.adobe.io
ADOBE_DOCUMENT_GENERATION_URL=https://documentgeneration.adobe.io

# Optional: Adobe.io Scopes (adjust based on which services you need)
ADOBE_SCOPES=openid,AdobeID,session,additional_info.projectedProductContext,additional_info.roles

# Optional: Service Settings
ADOBE_PDF_TIMEOUT_MS=300000
ADOBE_MAX_RETRIES=3
ADOBE_RETRY_DELAY_MS=5000

# Optional: Development Settings
ADOBE_DEBUG_MODE=true
ADOBE_LOG_REQUESTS=false
