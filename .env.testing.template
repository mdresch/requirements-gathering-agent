# Requirements Gathering Agent - Testing Environment Configuration
# Copy this to .env for automated testing and CI/CD pipelines

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Use mock provider for consistent testing
RGA_PRIMARY_PROVIDER=mock-ai

# Fallback to real providers for integration tests
RGA_FALLBACK_PROVIDERS=google-ai,github-ai

# Disable automatic fallback for predictable tests
RGA_AUTO_FALLBACK=false

# Fast health checks for testing
RGA_HEALTH_CHECK_INTERVAL=5000

# =============================================================================
# TESTING PERFORMANCE SETTINGS
# =============================================================================
# Fast response requirements for testing
RGA_MAX_RESPONSE_TIME=5000
RGA_MIN_SUCCESS_RATE=0.95
RGA_MAX_ERROR_RATE=0.05
RGA_HEALTH_CHECK_TIMEOUT=2000

# =============================================================================
# MOCK AI PROVIDER (PRIMARY FOR TESTING)
# =============================================================================
# Mock provider for deterministic testing
MOCK_AI_ENABLED=true
MOCK_AI_RESPONSE_DELAY=100
MOCK_AI_SUCCESS_RATE=1.0

# =============================================================================
# GOOGLE AI STUDIO (INTEGRATION TESTING)
# =============================================================================
# Use test API key for integration tests
GOOGLE_AI_API_KEY=your-google-ai-test-key
GOOGLE_AI_MODEL=gemini-1.5-flash

# =============================================================================
# GITHUB AI (INTEGRATION TESTING)
# =============================================================================
# Use test token for integration tests
GITHUB_TOKEN=your-github-test-token
GITHUB_ENDPOINT=https://models.github.ai/inference/

# =============================================================================
# TESTING CIRCUIT BREAKER
# =============================================================================
# Fast circuit breaker for testing
RGA_CIRCUIT_BREAKER_THRESHOLD=2
RGA_CIRCUIT_BREAKER_RESET_TIMEOUT=5000

# =============================================================================
# TESTING RETRY CONFIGURATION
# =============================================================================
# Minimal retries for fast tests
RGA_MAX_RETRIES=1
RGA_RETRY_BASE_DELAY=100
RGA_RETRY_MAX_DELAY=1000

# =============================================================================
# TEST OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_DIR=./test-documents

# =============================================================================
# TESTING LOGGING
# =============================================================================
# Minimal logging for clean test output
LOG_LEVEL=error
ENABLE_METRICS=true
METRICS_OUTPUT=./test-metrics.json

# =============================================================================
# TESTING FEATURES
# =============================================================================
# Enable testing-specific features
ENABLE_TEST_MODE=true
ENABLE_DETERMINISTIC_RESPONSES=true
DISABLE_EXTERNAL_CALLS=false
TEST_TIMEOUT=30000

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
# CI/CD specific settings
CI_MODE=true
PARALLEL_TESTS=true
MAX_CONCURRENT_REQUESTS=5
ENABLE_COVERAGE_REPORTING=true