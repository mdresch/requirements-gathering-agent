# =============================================================================
# ADPA Development Environment Configuration Template
# =============================================================================
# Development-optimized configuration with enhanced debugging and testing features

# =============================================================================
# PRIMARY AI PROVIDER CONFIGURATION
# =============================================================================
# For development, Google AI is recommended due to generous free tier
PRIMARY_AI_PROVIDER=google-ai

# =============================================================================
# GOOGLE AI STUDIO CONFIGURATION (Recommended for Development)
# =============================================================================
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-1.5-flash
GOOGLE_AI_ENABLED=true

# =============================================================================
# GITHUB AI CONFIGURATION (Alternative Free Option)
# =============================================================================
GITHUB_TOKEN=your-github-token-here
GITHUB_ENDPOINT=https://models.github.ai/inference/
GITHUB_AI_MODEL=gpt-4o-mini
GITHUB_AI_ENABLED=true

# =============================================================================
# OLLAMA LOCAL AI CONFIGURATION (For Offline Development)
# =============================================================================
# Useful for development when internet is unreliable
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_ENABLED=false

# =============================================================================
# AZURE OPENAI CONFIGURATION (If Available)
# =============================================================================
# Uncomment and configure if you have Azure OpenAI access
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-api-key
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_KEY_ENABLED=false

# =============================================================================
# DEVELOPMENT-SPECIFIC FALLBACK CONFIGURATION
# =============================================================================
ENABLE_PROVIDER_FALLBACK=true
PROVIDER_FALLBACK_ORDER=google-ai,github-ai,ollama

# More aggressive health checking for development
PROVIDER_HEALTH_CHECK_INTERVAL=60000   # 1 minute
PROVIDER_HEALTH_CHECK_TIMEOUT=5000     # 5 seconds

# Faster recovery for development
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIME=30000    # 30 seconds
CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=2

# Development retry configuration
MAX_RETRIES=2
RETRY_BASE_DELAY=500                   # 0.5 seconds
RETRY_MAX_DELAY=10000                  # 10 seconds
RETRY_BACKOFF_MULTIPLIER=1.5

# =============================================================================
# DEVELOPMENT PERFORMANCE SETTINGS
# =============================================================================
AI_TIMEOUT=30000                       # 30 seconds (shorter for dev)
ENABLE_REQUEST_CACHING=true
CACHE_TTL=1800000                      # 30 minutes (shorter for dev)

# Enhanced metrics for development
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=30000      # 30 seconds
ENABLE_TOKEN_MONITORING=true
DAILY_TOKEN_LIMIT_WARNING_THRESHOLD=0.7  # Warn at 70% for dev

# =============================================================================
# DEVELOPMENT OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_DIR=./dev-output
PREFERRED_FORMAT=markdown
SHOW_METRICS=true
EXPERIMENTAL_FEATURES=true

# =============================================================================
# DEVELOPMENT LOGGING AND DEBUGGING
# =============================================================================
LOG_LEVEL=debug
ENABLE_DEBUG_LOGGING=true
LOG_AI_REQUESTS=true                   # Enable for development debugging
LOG_PERFORMANCE_METRICS=true
LOG_PROVIDER_SWITCHES=true
LOG_CIRCUIT_BREAKER_EVENTS=true

# =============================================================================
# DEVELOPMENT TESTING CONFIGURATION
# =============================================================================
# Enable test mode features
ENABLE_TEST_MODE=true
MOCK_AI_RESPONSES=false                # Set to true to use mock responses
TEST_PROVIDER_FAILURES=false          # Set to true to simulate provider failures
SIMULATE_NETWORK_ISSUES=false         # Set to true to test fallback mechanisms

# Development-specific integrations (usually disabled)
DOCS_VCS_ENABLED=false
CONFLUENCE_ENABLED=false
SHAREPOINT_ENABLED=false