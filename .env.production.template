# Requirements Gathering Agent - Production Environment Configuration
# Copy this to .env for production deployment with high availability

# =============================================================================
# HIGH AVAILABILITY CONFIGURATION
# =============================================================================
# Primary provider for production workloads
RGA_PRIMARY_PROVIDER=azure-openai

# Multiple fallback providers for maximum uptime
RGA_FALLBACK_PROVIDERS=google-ai,github-ai,azure-ai-studio

# Enable automatic failover
RGA_AUTO_FALLBACK=true

# Aggressive health monitoring (every 15 seconds)
RGA_HEALTH_CHECK_INTERVAL=15000

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Strict performance thresholds for production
RGA_MAX_RESPONSE_TIME=8000
RGA_MIN_SUCCESS_RATE=0.98
RGA_MAX_ERROR_RATE=0.02
RGA_HEALTH_CHECK_TIMEOUT=3000

# =============================================================================
# AZURE OPENAI (PRIMARY - ENTERPRISE GRADE)
# =============================================================================
# Azure OpenAI with Entra ID for enterprise security
AZURE_OPENAI_ENDPOINT=https://your-production-resource.openai.azure.com/
AZURE_CLIENT_ID=your-production-client-id
AZURE_TENANT_ID=your-production-tenant-id
AZURE_CLIENT_SECRET=your-production-client-secret
USE_ENTRA_ID=true
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# =============================================================================
# GOOGLE AI STUDIO (FALLBACK 1 - COST EFFECTIVE)
# =============================================================================
GOOGLE_AI_API_KEY=your-google-ai-production-key
GOOGLE_AI_MODEL=gemini-1.5-pro

# =============================================================================
# GITHUB AI (FALLBACK 2 - DEVELOPER FRIENDLY)
# =============================================================================
GITHUB_TOKEN=your-github-production-token
GITHUB_ENDPOINT=https://models.github.ai/inference/

# =============================================================================
# AZURE AI STUDIO (FALLBACK 3 - ALTERNATIVE AZURE)
# =============================================================================
AZURE_AI_STUDIO_ENDPOINT=https://your-ai-studio.azure.com/
AZURE_AI_STUDIO_API_KEY=your-ai-studio-key

# =============================================================================
# CIRCUIT BREAKER CONFIGURATION
# =============================================================================
# Conservative settings for production stability
RGA_CIRCUIT_BREAKER_THRESHOLD=3
RGA_CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================
# Optimized retry settings for production
RGA_MAX_RETRIES=5
RGA_RETRY_BASE_DELAY=2000
RGA_RETRY_MAX_DELAY=60000

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_DIR=./production-documents

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Enable detailed logging for production monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_ENDPOINT=http://your-monitoring-system/metrics

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Additional security settings for production
ENABLE_REQUEST_VALIDATION=true
ENABLE_RESPONSE_SANITIZATION=true
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_REQUESTS_PER_MINUTE=1000